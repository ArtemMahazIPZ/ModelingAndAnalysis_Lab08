@startuml
title Activity — Переведення м² у гектари (і навпаки)
start
:Ввести значення (v);
:Обрати напрямок (dir);
:Обрати точність (prec);

if ("Перевірка: v є числом та v ≥ 0?") then (так)
  if ("dir == м²→га?") then (так)
    :result = v / 10000.0;
  else (ні)
    :result = v * 10000.0;
  endif
  :Округлити до prec знаків;
  :Показати result;
else (ні)
  :Показати помилку "Неправильне значення";
endif
stop
@enduml
